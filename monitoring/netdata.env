# Netdata Environment Variables for Garazas.art
# EXAMPLE FILE - Copy to netdata.env and edit with your values

# Netdata Cloud Configuration
# Get this token from https://app.netdata.cloud/
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_URL=https://app.netdata.cloud
NETDATA_CLAIM_ROOMS=garazas-art-monitoring
NETDATA_DISABLE_CLOUD=0

# System monitoring settings
NETDATA_EXTRA_ARGS=""

# Performance settings
NETDATA_MEMORY_MODE=dbengine
NETDATA_HISTORY=172800

# Container detection
DOCKER_HOST=unix:///var/run/docker.sock

# Authentication settings
NETDATA_ADMIN_USER=admin
NETDATA_ADMIN_PASSWORD=changeThisToSecurePassword!

# Retention settings
NETDATA_DBENGINE_MULTIHOST_DISK_SPACE=256 